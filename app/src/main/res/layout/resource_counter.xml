<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    android:layout_marginBottom="8dp"
    android:weightSum="3">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2">

        <!-- Nome do recurso -->
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_resource_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Recurso"
                android:textSize="16sp"
                android:gravity="center" />

            <!-- Quantidade -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="4dp">

                <Button
                    android:id="@+id/btn_decrease_quantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:backgroundTint="#ffccbc"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_resource_quantity"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#f0f0f0"
                    android:padding="4dp" />

                <Button
                    android:id="@+id/btn_increase_quantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:backgroundTint="#c8e6c9"
                    android:textColor="#000" />
            </LinearLayout>

            <!-- Produção -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="4dp">

                <Button
                    android:id="@+id/btn_decrease_production"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:backgroundTint="#ffccbc"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/tv_resource_production"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="#f0f0f0"
                    android:padding="4dp" />

                <Button
                    android:id="@+id/btn_increase_production"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:backgroundTint="#c8e6c9"
                    android:textColor="#000" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
